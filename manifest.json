{
  "name": "Inbox Radar: Tab title changes notifyer, for Gmail, WhatsApp, Slack & more",
  "short_name": "Inbox Radar",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Get notified about messages from Gmail, WhatsApp, Slack, and other tabsâ€” by monitoring title changes",
  "author": "Danilo da Silveira Figueira",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Inbox Radar"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "options_page": "popup.html",
  "homepage_url": "https://github.com/asfixia/Inbox-Radar",
  "offline_enabled": true
}
